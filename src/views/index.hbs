<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <title>My Blog - {{title}}</title>
    <style>
      @import
      url("https://fonts.googleapis.com/css2?family=Poppins&display=swap"); * {
      font-family: "Poppins", sans-serif; }
    </style>
  </head>

  <body style="background-color: #e3e7eb">
    <!-- Navbar Section -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary sticky-top">
      <div class="container-fluid px-5">
        <a class="navbar-brand" href="/">
          <img src="/assets/img/logo.png" alt="" width="50" height="auto" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item mx-2">
              <a
                class="nav-link fw-bold active"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item mx-2">
                <a class="nav-link" href="/project">Add Project</a>
              </li>
              <li class="nav-item mx-2">
                <a class="nav-link" href="/testimonial">Testimonials</a>
              </li>
            {{/if}}
          </ul>

          <ul class="navbar-nav me-3 mb-2 mb-lg-0">
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link fw-bold active">Hello,
                  {{user}}</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/login">Login</a>
              </li>
            {{/if}}
          </ul>

          {{#if isLogin}}
            <a class="btn btn-dark" role="button" href="/contact">
              Contact Me
            </a>
          {{/if}}
        </div>
      </div>
    </nav>

    {{#if messages.success}}
      <div class="alert alert-success" role="alert">
        <div class="container d-flex justify-content-center">
          {{messages.success}}
        </div>
      </div>
    {{/if}}

    <!-- Container Body -->
    <div class="container bg-white my-5 rounded shadow">
      <div class="row">
        <div class="col-sm-8 col-auto px-5 py-5">
          <!-- Content -->
          <h2 class="fw-bolder mb-4">Seiryo Pramanda Bayu Samudra</h2>
          <p style="text-align: justify">
            A Fresh Graduate majoring in Information System with experienced in
            analyzing business processes, analyzing systems, system testing,
            programming, and project management. I have an interest in the IT
            field based on the knowledge and experience I have gained.
            Highly-motivated for growing and learn new things, able to work with
            team or independently.
          </p>

          <!-- Button Contact -->
          <a
            class="btn btn-dark px-4 my-5 me-3 me-md-5 rounded-5"
            role="button"
            href="https://api.whatsapp.com/send/?phone=6282142577449&text&type=phone_number&app_absent=0"
            target="_blank"
          >
            Contact
          </a>

          <!-- CV -->
          <a
            class="link-dark link-offset-2 link-underline link-underline-opacity-0"
            target="_blank"
            href="assets/pdf/resume.pdf"
          >


            Download CV
            <i class="fa fa-download"></i>
          </a>

          <!-- Sosial Media -->
          <span class="d-flex">
            <a
              class="btn btn-dark fs-2 p-3 me-5 rounded-circle"
              class="btn btn-dark fs-2 p-3 me-5 rounded-circle"
              role="button"
              href="https://www.linkedin.com/in/seiryopramanda/"
              target="_blank"
            >
              <i class="icon fab fa-linkedin"></i>
            </a>

            <a
              class="btn btn-dark fs-2 p-3 me-5 rounded-circle"
              class="btn btn-dark fs-2 p-3 me-5 rounded-circle"
              role="button"
              href="https://www.instagram.com/seiprambs/"
              target="_blank"
            >
              <i class="icon fab fa-instagram"></i>
            </a>

            <a
              class="btn btn-dark fs-2 p-3 me-5 rounded-circle"
              class="btn btn-dark fs-2 p-3 me-5 rounded-circle"
              role="button"
              href="https://facebook.com/"
              target="_blank"
            >
              <i class="icon fab fa-facebook"></i>
            </a>

            <a
              class="btn btn-dark fs-2 p-3 me-5 rounded-circle"
              class="btn btn-dark fs-2 p-3 me-5 rounded-circle"
              role="button"
              href="https://twitter.com/"
              target="_blank"
            >
              <i class="icon fab fa-twitter"></i>
            </a>
          </span>
        </div>

        <!-- Card Image -->
        <div class="col-sm-4 col-auto d-flex align-items-center mx-auto my-5">
          <div class="card mx-auto mb-3 shadow" style="width: 15rem">
            <img
              src="assets/img/foto.jpg"
              class="card-img-top"
              alt="Foto Formal"
            />
            <div class="card-body">
              <h5 class="card-title text-center fw-bolder">Seiryo Pramanda</h5>
              <p class="card-text text-center">Fullstack Developer</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-5 bg-light">
      <h3 class="text-center px-5 py-5 fw-bold">MY PROJECT</h3>
      <div class="container d-flex flex-row justify-content-center">
        <div class="row d-flex flex-wrap">
          {{#each data}}
            <div class="col mx-2 mb-5">
              <div class="card" style="width: 20rem;">
                <img
                  src="/assets/img/project.png"
                  class="card-img-top"
                  alt="..."
                />
                <div class="card-body">
                  <h5 class="card-title fw-bolder"><a
                      href="/project-detail/{{this.id}}"
                      href="/project-detail/{{this.id}}"
                      class="link-dark link-offset-2 link-underline link-underline-opacity-0"
                    >{{this.title}}</a></h5>
                  <p class="card-text">Duration : {{duration}}</p>
                  <p class="card-text">{{this.description}}</p>
                  <p class="card-text">{{this.description}}</p>
                  <p class="card-text d-flex">
                    {{#each this.tech}}
                    {{#each this.tech}}
                      <i class="fa-brands {{this}} me-2 fs-4"></i>
                    {{/each}}
                  </p>
                  <div class="d-flex">
                    <a
                      href="/edit-project/{{this.id}}"
                      href="/edit-project/{{this.id}}"
                      class="btn btn-dark flex-fill m-1"
                    >Edit</a>
                    <a
                      href="/delete/{{this.id}}"
                      href="/delete/{{this.id}}"
                      class="btn btn-dark flex-fill m-1"
                    >Delete</a>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>

  </body>
</html>